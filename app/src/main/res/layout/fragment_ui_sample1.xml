<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ui.fragment.UiSampleSelectorFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ui_sample_gl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ui_sample_gl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ui_sample_gl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <Spinner
        android:id="@+id/city_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ui_sample_gl_1"
        app:layout_constraintRight_toLeftOf="@id/ui_sample_gl_2"
        app:layout_constraintTop_toBottomOf="@id/ui_sample_gl_3" />

    <Spinner
        android:id="@+id/region_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/ui_sample_gl_1"
        app:layout_constraintRight_toLeftOf="@id/ui_sample_gl_2"
        app:layout_constraintTop_toBottomOf="@id/city_sp" />

    <TextView
        android:id="@+id/code_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/n_a"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@id/ui_sample_gl_1"
        app:layout_constraintRight_toLeftOf="@id/ui_sample_gl_2"
        app:layout_constraintTop_toBottomOf="@id/region_sp" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/n_a"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/ui_sample_gl_1"
        app:layout_constraintRight_toLeftOf="@id/ui_sample_gl_2"
        app:layout_constraintTop_toBottomOf="@id/code_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>