<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_test_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_test_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/et_test_1" />

    <ProgressBar
        android:visibility="invisible"
        android:id="@+id/test_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="@id/et_test_2"
        app:layout_constraintRight_toRightOf="@id/et_test_2"
        app:layout_constraintTop_toBottomOf="@id/et_test_2" />

    <Button
        android:id="@+id/test_btn_1"
        android:text="submit text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="@id/et_test_2"
        app:layout_constraintRight_toRightOf="@id/et_test_2"
        app:layout_constraintTop_toBottomOf="@id/test_progress" />

    <Button
        android:id="@+id/test_btn_2"
        android:text="submit text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="@id/et_test_2"
        app:layout_constraintRight_toRightOf="@id/et_test_2"
        app:layout_constraintTop_toBottomOf="@id/test_btn_1" />
</androidx.constraintlayout.widget.ConstraintLayout>