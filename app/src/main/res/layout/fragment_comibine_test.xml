<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/test_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/layout_fade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@android:color/black"
        android:elevation="1dp"
        android:visibility="invisible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/test_gl"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_test_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_test_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/et_test_1" />

        <ProgressBar
            android:id="@+id/test_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@id/et_test_2"
            app:layout_constraintRight_toRightOf="@id/et_test_2"
            app:layout_constraintTop_toBottomOf="@id/et_test_2" />

        <Button
            android:id="@+id/test_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="submit text1"
            app:layout_constraintLeft_toLeftOf="@id/et_test_2"
            app:layout_constraintRight_toRightOf="@id/et_test_2"
            app:layout_constraintTop_toBottomOf="@id/test_progress" />

        <Button
            android:id="@+id/test_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="submit text2"
            app:layout_constraintLeft_toLeftOf="@id/et_test_2"
            app:layout_constraintRight_toRightOf="@id/et_test_2"
            app:layout_constraintTop_toBottomOf="@id/test_btn_1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/test_progress_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:elevation="2dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="3dp"
        android:text="Error"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="50sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_gl">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_test_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_test_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/et_test_3" />

        <ProgressBar
            android:id="@+id/test_progress_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@id/et_test_4"
            app:layout_constraintRight_toRightOf="@id/et_test_4"
            app:layout_constraintTop_toBottomOf="@id/et_test_4" />

        <Button
            android:id="@+id/test_btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="submit text3"
            app:layout_constraintLeft_toLeftOf="@id/et_test_4"
            app:layout_constraintRight_toRightOf="@id/et_test_4"
            app:layout_constraintTop_toBottomOf="@id/test_progress_2" />

        <Button
            android:id="@+id/test_btn_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="submit text4"
            app:layout_constraintLeft_toLeftOf="@id/et_test_4"
            app:layout_constraintRight_toRightOf="@id/et_test_4"
            app:layout_constraintTop_toBottomOf="@id/test_btn_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>